{
    "compileOnSave": true,
    "compilerOptions": {
        "baseUrl": ".",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noUnusedLocals": true,
        //"noUnusedParameters": true,
        "strict": true,
        "target": "es5",
        "module": "commonjs", // use es2015 to utilise treeshaking
        "lib": [
            "dom",
            "es2015"
        ],
        "noImplicitAny": true,
        "moduleResolution": "node",
        "sourceMap": true,
        "outDir": "build",
        "jsx": "preserve",
        "jsxFactory": "h"
    },
    "exclude": [
        "node_modules/*"
    ]
}